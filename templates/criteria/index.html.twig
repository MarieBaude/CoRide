{% extends 'base.html.twig' %}

{% block title %}Criteria index{% endblock %}

{% block body %}
    <h1>Criteria index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Smoking</th>
                <th>Animals</th>
                <th>WomenOnly</th>
                <th>ManOnly</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for criterion in criterias %}
            <tr>
                <td>{{ criterion.id }}</td>
                <td>{{ criterion.smoking ? 'Yes' : 'No' }}</td>
                <td>{{ criterion.animals ? 'Yes' : 'No' }}</td>
                <td>{{ criterion.womenOnly ? 'Yes' : 'No' }}</td>
                <td>{{ criterion.manOnly ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_criteria_show', {'id': criterion.id}) }}">show</a>
                    <a href="{{ path('app_criteria_edit', {'id': criterion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_criteria_new') }}">Create new</a>
{% endblock %}
